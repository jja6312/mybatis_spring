<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.mvc.model.dao.MemberDao">
    <!-- 로그인 -->
    <select id="login" resultType="com.ssafy.mvc.model.dto.member.Member" parameterType="com.ssafy.mvc.model.dto.member.LoginDto">
        SELECT * FROM member
        WHERE email = #{email} and password=#{password};
    </select>
    <!-- 회원 등록 -->
    <insert id="createMember" parameterType="com.ssafy.mvc.model.dto.member.Member">
        INSERT INTO member (email, password, name)
        VALUES (#{email}, #{password}, #{name});
    </insert>
</mapper>